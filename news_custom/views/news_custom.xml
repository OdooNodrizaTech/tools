<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="new_custom_form_view" model="ir.ui.view">
            <field name="name">Novedades</field>
            <field name="model">new.custom</field>
            <field name="arch" type="xml">
                <form string="Novedad">                    
                    <sheet string="child">
                        <div class="oe_right oe_button_box" name="buttons">
                            <button name="action_mark_as_read" type="object" string="Marcar como leido" class="oe_highlight" attrs="{'invisible': [('date_read','!=', False)]}" />
                        </div>                        
                        <group>
                            <field name="date"/>
                            <field name="date_read"/>                            
                            <field name="active" groups="base.group_system" />
                            <field name="name"/>                            
                            <field name="description"/>                                                     
                        </group>
                    </sheet>                    
                </form>                
            </field>
        </record>                           
        <record id="new_custom_tree" model="ir.ui.view">
            <field name="name">Novedades</field>
            <field name="model">new.custom</field>            
            <field name="arch" type="xml">
                <tree string="Novedades">
                    <field name="name"/>
                    <field name="active" groups="base.group_system"/>                    
                    <field name="date"/>
                    <field name="date_read"/>                    
                </tree>
            </field>            
        </record>                
        <record model="ir.actions.act_window" id="new_custom_action">
            <field name="name">Novedades</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">new.custom</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="new_custom_tree"/>
        </record>
        <menuitem
            action="new_custom_action" 
            name="Novedades" 
            id="menuitem_new_custom" 
            sequence="120" 
        />                        
    </data>
</openerp>